                        case 4:{
                            System.out.println("How many packets?");
                            int e=input.nextInt();
                            Amount=Amount+(e*5);
                            System.out.println("Amount="+Amount);
                            break;
                        }

                    }
                    System.out.println("Anything else press->1  no->0");
                    int f=input.nextInt();
                    if(f==0){
                        break;
                    }
                }
            }
            if(b==2){
                System.out.println("Amount=350");
                Amount=350;
                int f=1;
                while(f==1){
                    System.out.println("Add ons\n1.Toppings Rs.100\n2.Bag charges RS.20\n3.water bottle RS.20\n4.ketch up RS.5\n");
                    int c=input.nextInt();
