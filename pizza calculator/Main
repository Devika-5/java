                            System.out.println("How many?");
                            int d=input.nextInt();
                            Amount=Amount+(d*20);
                            System.out.println("Amount="+Amount);
                            break;
                        }
                        case 4:{
                            System.out.println("How many packets?");
                            int e=input.nextInt();
                            Amount=Amount+(e*5);
                            System.out.println("Amount="+Amount);
                            break;
                        }

                    }
                    System.out.println("Anything else press->1  no->0");
                    int f=input.nextInt();
                    if(f==0){
                        break;
                    }
                }
            }

        }
        if(a==2){ //normal
            System.out.println("1->veg RS.300 2->nonveg RS.350");
